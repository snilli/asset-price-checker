{
	"$schema": "https://swc.rs/schema.json",
	"sourceMaps": false,
	"module": {
		"type": "es6",
		"lazy": true,
		"strict": true,
		"strictMode": true,
		"noInterop": true,
		"resolveFully": true
	},
	"exclude": [
		".*\\.spec\\.ts$"
	],
	"jsc": {
		"minify": {
			"compress": false,
			"mangle": false
		},
		"target": "esnext",
		"keepClassNames": true,
		"parser": {
			"syntax": "typescript",
			"tsx": false,
			"decorators": true,
			"dynamicImport": true
		},
		"transform": {
			"legacyDecorator": true,
			"decoratorMetadata": true,
			"useDefineForClassFields": false
		},
		"baseUrl": "./"
	},
	"isModule": true,
	"minify": true
}